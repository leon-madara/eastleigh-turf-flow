FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@your-project-id.iam.gserviceaccount.com
# Escape newlines as \n when pasting into .env
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n
SESSION_COOKIE_NAME=sid
SESSION_TTL_DAYS=7

# Comma-separated list of allowed origins for CORS during development
# Example: http://localhost:5173,http://localhost:3000
ALLOWED_ORIGINS=

# Logging level: debug | info | warn | error
LOG_LEVEL=info

# Postgres connection (required for Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb?schema=public

# Allowlist phones (auto-activate) and admin phones
ALLOWLIST_PHONES=+254704505523
ALLOWLIST_ADMIN_PHONES=+254704505523

# Comma-separated list of webhook URLs to receive notifications
# A POST with JSON { type: 'NEW_PENDING_USER', phoneE164, uid, createdAt } will be sent
NOTIFY_WEBHOOK_URLS=
